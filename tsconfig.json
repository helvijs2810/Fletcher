        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES5",
        "typeRoots": [
            "node_modules/@types"
